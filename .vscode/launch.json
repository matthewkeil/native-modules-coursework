{
  "version": "2.0.0",
  "configurations": [
    {
      "name": "C++ Launch",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceRoot}/src/addon",
      "preLaunchTask": "build",
      "internalConsoleOptions": "openOnSessionStart",
      "logging": {
        "moduleLoad": false,
        "programOutput": true,
        "trace": true,
        "traceResponse": true,
        "engineLogging": true
      },
      "showDisplayString": false,
      "stopAtEntry": false,
      "externalConsole": true, // set true to enable keyboard input
      "osx": {
        "MIMode": "lldb"
      },
      "args": [],
      "cwd": "${workspaceFolder}",
      "environment": [],
      "MIMode": "lldb"
    }
  ]
}
